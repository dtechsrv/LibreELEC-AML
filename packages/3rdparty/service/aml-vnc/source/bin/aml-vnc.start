. /etc/profile

oe_setup_addon service.system.aml-vnc

if [ "$AML_VNC_DELAY" == "true" ] ; then
  sleep 10
fi

if [ "$AML_VNC_AUTH" == "true" ] ; then
  exec aml-vnc -P "$AML_VNC_PORT" -p "$AML_VNC_PWD" &>$ADDON_HOME/service.log
else
  exec aml-vnc -P "$AML_VNC_PORT" &>$ADDON_HOME/service.log
fi
