. /etc/profile

oe_setup_addon service.apcupsd

chmod a+x $ADDON_DIR/bin/*

if [ ! -f "${ADDON_HOME}/apcupsd.conf" ]; then
  cp ${ADDON_DIR}/config/apcupsd.conf ${ADDON_HOME}/apcupsd.conf
fi

exec apcupsd -f ${ADDON_HOME}/apcupsd.conf -b
