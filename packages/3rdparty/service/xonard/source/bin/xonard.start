. /etc/profile

oe_setup_addon service.xonard

DEVNAME="/dev/hidraw0"

if [ -e "$DEVNAME" ]; then
  xonard "$DEVNAME"
  PID=$(ps aux | awk '/xonard \/dev\/hidraw0/ {print $1; exit 0}')
  echo $PID > /run/xonard.pid
fi
