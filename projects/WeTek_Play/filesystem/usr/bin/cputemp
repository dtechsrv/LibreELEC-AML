TEMP="$(cat /sys/class/saradc/temperature)"

# Fix millidegree issue, if the kernel return value is specified in it
if [ $TEMP -gt 1000 ]; then
  echo "$(( $TEMP / 1000 )) C"
else
  echo "$(( $TEMP )) C"
fi
